{
  "swagger": "2.0",
  "info": {
    "title": "melodyhaven API",
    "description": "melodyhaven API Information and Documentation",
    "version": "1.0.0"
  },
  "host": "melody-haven.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "tags": [
    {
      "name": "API Docs",
      "description": "Operations related to Swagger documentation"
    },
    {
      "name": "Users",
      "description": "Operations related to user management"
    },
    {
      "name": "Albums",
      "description": "Operations related to albums"
    }
  ],
  "paths": {
    "/api-docs": {
      "get": {
        "tags": ["API Docs"],
        "description": "Returns Swagger Documentation using Swagger UI.",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/users/": {
      "get": {
        "tags": ["Users"],
        "description": "Gets a list of all users.",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Users"],
        "description": "Creates a new user account.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "jane.doe@example.com"
                },
                "username": {
                  "example": "janedoe123"
                },
                "name": {
                  "example": "Jane Doe"
                },
                "avatarImg": {
                  "example": "jane-doe.jpg"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["Users"],
        "description": "Get user details by ID.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": ["Users"],
        "description": "Update user details by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "example": "john.smith@example.com"
                },
                "username": {
                  "example": "johnsmith321"
                },
                "name": {
                  "example": "John Smith"
                },
                "avatarImg": {
                  "example": "john-smith.jpg"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Users"],
        "description": "Deletes a user by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/albums/": {
      "get": {
        "tags": ["Albums"],
        "description": "Get a list of all albums",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Albums"],
        "description": "Create a new album.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "artist": {
                  "example": "The Beatles"
                },
                "albumName": {
                  "example": "Abbey Road"
                },
                "coverImage": {
                  "example": "abbey-road.jpg"
                },
                "recordLabel": {
                  "example": "Apple Records"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/albums/{id}": {
      "get": {
        "tags": ["Albums"],
        "description": "Get album details by ID.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": ["Albums"],
        "description": "Update album details by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "artist": {
                  "example": "Marvin Gaye"
                },
                "albumName": {
                  "example": "What's Going On"
                },
                "coverImage": {
                  "example": "whats-going-on.jpg"
                },
                "recordLabel": {
                  "example": "Tamla"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Albums"],
        "description": "Deletes an album by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
